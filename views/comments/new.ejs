<% include ../partials/header%>
<div class="container">
    <div class="row">


        <h1 style="text-align: center">Add new Comment to <%=campground.name%></h1>
        <div style="width:30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Reviews">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[image]" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[ratings]" placeholder=" Hospitality Ratings">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  placeholder=" Bathroom Quality Ratings">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  placeholder=" Cleanliness Ratings">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  placeholder="Delivery Speed Ratings">
                </div>


                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block" type="submit">Submit</button>
                </div>



            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>
</div>
<% include ../partials/footer%>